%h1 Search by metadata

= render :partial => 'search'

#facets
  %h2 Filters
  = render :partial => 'facets'

#results
  %h2 #{collection.total} files found
  
  %ol
    - collection.each_hit_with_result do |hit, resource|
      %li= render :partial => 'result', :locals => {:hit => hit, :resource => resource}
  
  = paginate collection.results