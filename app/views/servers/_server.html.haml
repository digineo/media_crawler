%tr
  %td= server.id
  %td= link_to server.uri_ftp, server.uri_ftp
  %td.right= server.resources.count
  %td.right= link_to server.resources.indexed.count, resources_path(:query => "server_id:#{server.id}")
  %td= server.state
  %td= server.checked_at? ? "#{time_ago_in_words(server.checked_at)} ago" : 'never'
